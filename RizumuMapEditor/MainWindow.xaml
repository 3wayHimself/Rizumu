<Window x:Class="RizumuMapEditor.MainWindow"
        xmlns:local="clr-namespace:RizumuMapEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:integrate1="clr-namespace:MerjTek.WpfIntegration;assembly=MerjTek.WpfIntegration.MonoGameControlWinGL"
        Title="MainWindow" Height="350" Width="525">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

        <integrate1:MonoGameControl x:Name="Red" Grid.Row="0" Grid.Column="0" Background="Red" Margin="3" ControlLoaded="MonoGameControl_Loaded" Render="Red_Render" />
    </Grid>
    </Window>